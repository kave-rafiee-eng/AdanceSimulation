<UserControl x:Class="ElavatorSimilator.Views.CallsDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElavatorSimilator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <DataGrid ItemsSource="{Binding Calls}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Advance" Binding="{Binding advance}" />
                <DataGridTextColumn Header="From" Binding="{Binding From}" />
                <DataGridTextColumn Header="Floor" Binding="{Binding Floor}" />
                <DataGridTextColumn Header="Door1" Binding="{Binding door1}" />
                <DataGridTextColumn Header="Door2" Binding="{Binding door2}" />
                <DataGridTextColumn Header="Door3" Binding="{Binding door3}" />
                <DataGridTextColumn Header="Direction" Binding="{Binding dir}" />
                <DataGridTextColumn Header="Timer" Binding="{Binding Timer}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
