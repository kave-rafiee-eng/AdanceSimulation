<Page x:Class="ElavatorSimilator.PageElevator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElavatorSimilator"
      xmlns:Views="clr-namespace:ElavatorSimilator.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageElevator">


    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <Views:CallsDataGrid x:Name="CallsDataGridInstance" />
        </ScrollViewer>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <Views:SystemPanelView x:Name="SystemPanelViewInstance" />
        </ScrollViewer>



    </Grid>
</Page>
